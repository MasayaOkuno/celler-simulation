{
    "env": {
        "node": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "warn",
        "indent": [
            "error",
            4
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "semi": [
            "warn",
            "never"
        ]
    },
    "ignorePatterns": [
        "*.json",
        "node_modules/",
    ]
}